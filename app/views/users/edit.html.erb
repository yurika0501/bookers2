<main>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                <h2>User info</h2>
                <%= form_with model: @user do |f| %>
                <div class="form-group">
                    <label for="user_name">Name</label>
                    <%= f.string_field :name %>
                </div>
                    <%= f.file_field :image, accept: "image/*" %>
                    
                <% end %>
            </div>
        </div>
    </div>
</main>
