<%= render 'info', book: @newbook , user: current_user %>
        <div class="col-md-8 offset-md-1">
            <h2>Users</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                    <tr>
                        <td>
                        <%= link_to user_path(user.id) do %>
                            <%= image_tag user.get_profile_image(80,80) %>
                        <% end %>
                        </td>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= link_to "Show", user_path(user) %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</main>