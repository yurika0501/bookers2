<main>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <!--プロフ画像の表示を実装-->
            <% if @user.profile_image.attached? %><!--ユーザーの画像は設定されてる？-->
              <%= image_tag @user.image, size: "100x100" %><!--ユーザーの画像が設定されてる場合はこのサイズで表示-->
            <% else %><!--ユーザーの画像が設定されていない場合は下記を実行して-->
              <%= image_tag 'default-image', size: "100x100" %><!--ユーザーの画像が設定されてる場合はassetsに入ってる「'default-image'」を使う-->
            <% end %>
            
            <table class="table">
                <tbody>
                    <tr></tr>
                    <tr>
                      <th>name</th>
                      <th><%= @user.name %></th>
                    </tr>
                    <tr>
                      <th>introduction</th>
                      <th><%= @user.introduction %></th>
                    </tr>
                </tbody>
            </table>
            <div class="row">
              <!--プロフィール編集ボタン-->
              <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
              <i class="fa-solid fa-user-gear"></i>
              <% end %>
            </div>
            
          <!--投稿部分-->
          <h2 class="mt-3">New book</h2>
         

          <%= form_with model: @book do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label><br>

              <%= f.text_field :title %>
	        </div>
	    
	        <div class="form-group">
              <label for="book_opinion">Opinion</label><br>
              <%= f.text_area :body %>
	        </div>

            <div class="form-group">
              <%= f.submit 'Create Book' , class: "btn btn-success" %>
            </div>
          <% end %>
         
        </div>
        
        <!--画面右側-->
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <!--アイコンとユーザー名-->
                  <%= link_to user_path(current_user.id) do %>
                    <% if @user.profile_image.attached? %><!--ユーザーの画像は設定されてる？-->
                      <%= image_tag @user.image, size: "100x100" %><!--ユーザーの画像が設定されてる場合はこのサイズで表示-->
                    <% else %><!--ユーザーの画像が設定されていない場合は下記を実行して-->
                      <%= image_tag 'default-image', size: "100x100" %><!--ユーザーの画像が設定されてる場合はassetsに入ってる「'default-image'」を使う-->
                    <% end %><br>
                    <%= @user.name %>
                  <% end %>
                </td>
                <td>
                <!--タイトル（リンク付き）-->
                <%= link_to books_path do %>
                  <% @books.each do |book| %>
                  <% end %>
                <% end %>
                </td>
                <td></td>
                <td></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</main>